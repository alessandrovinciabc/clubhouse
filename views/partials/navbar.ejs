<header class="navbar navbar-dark bg-dark navbar-expand-md shadow fixed-top">
    <div class="container-fluid">
      <span class="navbar-brand mb-0 h1 text-warning">
        <%= siteName %>
      </span>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <h5 class="text-light text-center mb-0 mx-auto">
            <%= locals.user?.username ? `Welcome back, ${user.username}` : '' %>
          </h5>
          <div class="navbar-nav">
            <a class="nav-link active" aria-current="page" href="#">Home</a>
            <% if(!user){ %>
              <a class="nav-link" href="/login">Login</a>
              <a class="nav-link btn btn-warning text-dark" href="/signup">Sign up</a>
            <% } else { %>
              <a class="nav-link btn btn-warning text-dark" href="/logout">Logout</a>
            <% } %>
          </div>
        </div>
    </div>
</header>